{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,
    "noEmit": false,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports" : true,
    "noImplicitAny": true,
    "outDir": "../lib/",
    "types": [
      "node",
      "webdriverio/sync",
      "@rpii/wdio-report-events",
      "@types/chai",
      "@types/mocha"
    ]
  },
  "include": [
    "../test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../src"
  ],
  "compileOnSave": false
}
